
<div class='table-container'>
    {% for row in table.rows %} 
        {% if row.type != "" %}
            {% if 'DEFINITION' in row.section %}
                </tbody>
                </table>
                </div>
                <br>
            {% endif %}
            <h3>{{row.section}}</h3>
            <div class="fixed-container">
            <table class="{{table.units}}-units data-table table is-striped is-hoverable is-fullwidth">
            <thead class="fixed-thead">
            <tr>
            {% for heading in table.headings %} 
                <th class="fixed-header" scope="col">{{heading}}</th>
            {% endfor %}
            </tr>
            </thead>
            <tbody>
        {% endif %}
        {% if row.id != "0" %}
            <tr id="{{row.id}}">
        {% else %}
            <tr>
        {% endif %}
        {%for column in row.data %}
            {% if 'ACRONYM' in row.section and column.type == "Term" %}
                <td><a href="#{{column.data}}">{{column.data}}</a></td>
            {% elif 'Section' in column.type and row.link %}
                <td><a href="{{row.link}}">{{column.data}}</a></td>
            {% else %}
                <td>{{column.data}}</td>
            {% endif %}
        {% endfor %}
        </tr>
    {% endfor %}
    </tbody>
    </table>
    </div>
</div>