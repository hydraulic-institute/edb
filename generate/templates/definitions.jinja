
<div class='table-container'>
    {% for section in table %}
        <h3>{{section.section}}</h3>
        <div class="fixed-container">
        <table class="{{units}}-units data-table table is-striped is-hoverable is-fullwidth">
        <thead class="fixed-thead">
        <tr>
        {% for heading in section.headings %} 
            <th class="fixed-header" scope="col">{{heading}}</th>
        {% endfor %}
        </tr>
        </thead>
        <tbody>
        {% for row in section.rows %}
            {% if row.id != "0" %}
                <tr id="{{row.id}}">
            {% else %}
                <tr>
            {% endif %}
            {%for column in row.data %}
                {% if 'Acronym' in section.section and column.type == "Term" %}
                    <td><a href="#{{column.data}}">{{column.data}}</a></td>
                {% elif 'Section' in column.type and row.ref_link %}
                    <td><a href="{{row.ref_link}}">{{column.data}}</a></td>
                {% elif column.links %}
                    <td><a href="{{column.links}}" target="_blank">{{column.data}}</a></td>
                {% else %}
                    <td>{{column.data}}</td>
                {% endif %}
            {% endfor %}
            </tr>
        {% endfor %}
        </tbody>
        </table>
        </div>
        <br>
    {% endfor %}
</div>